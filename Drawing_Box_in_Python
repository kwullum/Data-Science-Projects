def input_control_h(height):
    
    while True:
        try:
            height = int(input("Enter height: "))
            height = int(height)
            if height < 1:
                raise ValueError
            break
        except (ValueError):
            print ("You must enter a valid number above zero")
    return height

def input_control_w(width):
    
    while True:
        try:
            width = int(input("Enter width: "))
            width = int(width)
            if width < 1:                    
                raise ValueError
            break
        except (ValueError):
            print ("You must enter a valid number above zero")
    return width

def box(height, width):
    
    for i in range(height):
        if i in[0]:
            print("* "*(width))
        elif i in[(height-1)]:
            print("* "*(width))
        else:
            print("*"+"  "*(width-2)+" *")

            
height = input_control_h(height)
width = input_control_w(width)

box(height, width)
    
